function callback(err, res) {
  $div = $('<div />')
  var logValue = {
    error: err,
    response: res
  }
  $div.text(JSON.stringify(logValue))
  console.log(logValue)
  //console.log(JSON.stringify(logValue.res));
  $('#logs').append($div)
}
</script>
